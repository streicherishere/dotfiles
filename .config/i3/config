# Mod keys (Super/Windows key and Alt)
set $mod Mod4
set $mod1 Mod1

# Font for window titles
font pango:Source FiraCode Nerd Font Bolt 10

# Window borders (1 pixel wide)
for_window [class=".*"] border pixel 1

# Focus behavior: Focus follows the activated window
focus_on_window_activation smart

# Drag tiling windows with your mouse
tiling_drag modifier titlebar

# Hide mouse pointer after a short period of inactivity
exec_always --no-startup-id unclutter -idle 0.01 -root

# --------------------------------------------------------------------
# 2. i3bar (Status Bar)
# --------------------------------------------------------------------
bar {
    font pango:source firacode nerd font 10
    position top
    status_command i3status-rs  ~/.config/i3/i3rs-config.toml
    colors {
        separator #666666

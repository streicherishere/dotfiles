configuration{
    modi: "run,window,combi";
    show-icons: false;
    terminal: "alacritty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-combi: "All ";
    display-run: "Run ";
    display-window: "Window";
    sidebar-mode: false;
    kb-remove-to-eol: "Control+Shift+y";
    kb-row-up: "Up,Control+k";
    kb-row-down: "Down,Control+j";
    kb-accept-entry: "Control+m,Return,KP_Enter";
    kb-screenshot: "Control+s";
}

@theme "/dev/null"

* {
  bg: #FFFFFF;
  bg-alt: #444b6a;

  fg: #000060;
  fg-alt: #787c99;

  background-color: @bg;

  border: 2;
  margin: 0;
  padding: 2;
  spacing: 0;
}

window {
  width: 70%;
  background-color: @bg-alt;

}

element {
    width: 100px;       /* Breite der Einträge auf 150 Pixel begrenzen */
    padding: 1px;       /* Innenabstand um jeden Eintrag */
}

element selected {
  background-color: @bg-alt;
  text-color: @bg;
}

element-text {
  background-color: inherit;
  text-color: inherit;
  vertical-align: 0.0;
}

listview {
    columns: 1;         /* Zwei Spalten */
    fixed-columns: true; /* Spaltenanzahl bleibt immer gleich */
    layout: vertical;   /* Elemente werden in Spalten vertikal gestapelt */
}

entry {
  background-color: @bg-alt;
  padding: 0;
  text-color: @bg;
}

element {
    width: 400px;       /* Breite der Einträge auf 150 Pixel begrenzen */
    padding: 1px;       /* Innenabstand um jeden Eintrag */
}

#textbox {
    width: 200px;       /* Breite der Texte explizit begrenzen */
    horizontal-align: 0; /* Linksbündig */
}
